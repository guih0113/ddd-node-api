{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "types": ["node", "vitest/globals"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,

    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
